alias tmp='mkdir /tmp/$$ ; cd /tmp/$$'
alias untmp='rm -rf /tmp/$$'
alias usage='(shopt -s nullglob; du -sh -- .[^.]* * | sort -h)'

alias m='mpv --really-quiet'
alias y='youtube-dl --no-mtime --restrict-filenames -f "bestvideo[height<=1080]+bestaudio/best[height<=1080]" --cookies-from-browser firefox'
alias yp='youtube-dl -o "%(playlist_index)s-%(title)s-%(id)s.%(ext)s" --cookies-from-browser firefox'

alias ins='sudo apt install'
alias sapt='apt-cache search'
alias a='sudo apt'
alias d='sudo systemctl'

alias g='git'
alias q='quilt'
alias gdb='gdb -q -ex "focus cmd"'
alias b="make -kj$(nproc)"
alias dquilt="quilt --quiltrc=${HOME}/.quiltrc-dpkg"
alias v='gvim --remote-silent'
alias p2='passphrase2pgp'

alias ls='ls --literal --color=auto'
alias rm='rm --interactive=never'
alias grep='grep --color=auto'

alias p='pushd'
alias po='popd'
alias s='less -cSR'
